<view class="page">
    <view class="page-main">
        <!-- 用户资料 -->
        <view class="mine-info" bindtap="goInfoEdit">
            <image class="user-info-img" src="{{userInfo.imgUrl}}" background-size="cover" />
            <view class="username">
                <text>{{userInfo.nickName}}</text>
                <view class="tel">
                    <text>{{userInfo.phone}}</text>
                    <text class="tel-check" wx:if="{{userInfo.phoneStatus == 0}}">未验证</text>
                    <text class="tel-check pass" wx:elif="{{userInfo.phoneStatus == 1}}">已验证</text>
                </view>
            </view>
            <view class="edit-info">
                <text>编辑</text>
            </view>
            <image class="arrow" src="../../resources/arrow.png" background-size="cover" />
        </view>
        <!-- 操作列表 -->
        <view class="widgets__item">
            <view class="widgets__list">
                <navigator url="../list/list?type=zuji" class="widget">
                    <image class="list_icon" src="/image/mine-icon-footprints.png" background-size="cover" />
                    <text class="widget__name">足迹</text>
                    <image class="widget__arrow" src="../../resources/arrow.png" background-size="cover" />
                    <view class="widget__line"></view>
                </navigator>
                <!-- <navigator url="../list/list?type=like" class="widget">
                    <image class="list_icon" src="/image/mine-icon-like.png" background-size="cover" />
                    <text class="widget__name">我的赞</text>
                    <image class="widget__arrow" src="../../resources/arrow.png" background-size="cover" />
                    <view class="widget__line"></view>
                </navigator> -->
                <navigator url="../list/list?type=card" class="widget">
                    <image class="list_icon" src="/image/mine-icon-card.png" background-size="cover" />
                    <text class="widget__name">名片夹</text>
                    <image class="widget__arrow" src="../../resources/arrow.png" background-size="cover" />
                    <view class="widget__line"></view>
                </navigator>
            </view>
        </view>
    </view>
</view>