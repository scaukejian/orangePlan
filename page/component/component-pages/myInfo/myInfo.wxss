/* 创建名片 */
.card-creat-block {
    padding-top: 15px;
}
.w-card-info-box {
    background-color: #fff;
    font-size: 18px;
    padding-left: 15px;
    border-top: 1rpx solid #bdbdbd;
    border-bottom: 1rpx solid #bdbdbd;
    margin-bottom: 15px;
}
.w-user-info {
    display: flex;
}
.w-info-input {
    flex: 1;
}
.w-user-info-img {
    width: 50px;
    height: 50px;
    border: 1px solid #bdbdbd;
    border-radius: 6px;
    margin-right: 15px;
    margin-top: 10px;
}
.w-card-info-box .input {
    /*padding: 10px 0;*/
    position: relative;
}
.widget__line_top{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    height: 1rpx;
    background-color: #DFDFDF;
    width: 100%;
}
.w-user-com {
    /*padding: 10px 0;*/
    display: flex;
    position: relative;
}
.w-com-txt {
    width: 50px;
    margin-right: 10px;
    display: flex;
    justify-content: center;
    -ms-align-items: center;
    align-items: center;
}
.imp {
    color:#f00;
}
.com-input {
    flex: 1;
}
.com-input textarea {
    width: 90%;
    height: 3em;
}
.creatBtn {
    width: 90%;
    margin: 0 auto;
}
.changeMobile {
    position: absolute;
    right: 20px;
    top: 13px;
    border: 1px solid #bdbdbd;
    border-radius: 6px;
    font-size: 14px;
    padding: 0 5px;
    z-index: 999;
}
.setBtn[type="primary"] {
    background-color: #53b6e0;
    margin-bottom: 15px;
}
.desc-block {
    padding: 10px 0;
}