.list-line {
    background-color: #fff;
    padding: 10px 15px;
    display: flex;
    align-items: center;
    position: relative;
}
.date {
    color: #bdbdbd;
    font-size: 12px;
    padding: 5px 10px;
}
.user-img {
    width: 50px;
    height: 50px;
    border: 1px solid #bdbdbd;
    border-radius: 6px;
    margin-right: 10px;
}
.user-info {
    flex: 1;
}
.username {
    margin-bottom: 3px;
    font-size: 20px;
}
.com-name {
    color: #bdbdbd;
    font-size: 14px;
}
.widgets__item {
    border-top: 1rpx solid #bdbdbd;
    border-bottom: 1rpx solid #bdbdbd;
    position: relative;
}
.widget__line{
    content: " ";
    position: absolute;
    left: 20px;
    bottom: 0;
    height: 1rpx;
    background-color: #DFDFDF;
    width: 100%;
}
.no-more {
    border-top: 1px solid #E5E5E5;
    width: 65%;
    margin: 30px auto;
    line-height: 1.6;
    font-size: 14px;
    text-align: center;
}
.no-more-txt {
    position: relative;
    top: -0.9em;
    padding: 0 10px;
    background-color: #fbf9fe;
    color: #999;
    display: inline-block;
    vertical-align: middle;
}
button[type="primary"] {
    background-color: #53b6e0;
}
.line-right {
    position: absolute;
    right: 15px;
    top: 50%;
    height: 28px;
    margin-top: -14px;
    display: -webkit-flex;
    display: flex;
}
.call-icon {
    width: 25px;
    height: 25px;
}
.noDataTop {
    padding-top: 30px;
}
.noCardImg {
    text-align: center;
}
.noCardTxt {
    text-align: center;
    color: #53b6e0;
    margin-top: 15px;
}
.noCard {
    width: 200px;
    height: 200px;
}
.list-main {
    overflow: hidden;
}
.block-re {
    position: relative;
}