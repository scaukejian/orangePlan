.index{
    background-color: #FBF9FE;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    flex: 1;
    min-height: 100%;
    font-size: 14px;
}
.body{
    padding-left: 15px;
    padding-right: 15px;
    overflow: hidden;
}
.card-info-block {
    padding: 0 15px 15px;
}
.card-info-box {
    background-color: #fff;
    padding: 20px 15px;
    position: relative;
}
.username {
    font-size: 20px;
    color: #636365;
}
.user-job {
    margin-left: 10px;
    color: #666;
}
.card-info-line {
    margin-top: 15px;
}
.line-title {
    margin-right: 10px;
}
.telTxt {
    font-size: 22px;
    color: #53b6e0;
}
.line-title {
    margin-right: 10px;
    color: #bdbdbd;
}
.user-info-img {
    width: 50px;
    height: 50px;
    position: absolute;
    right: 15px;
    top: 20px;
    border: 1px solid #bdbdbd;
    border-radius: 6px;
}
.button-wrapper {
    width: 90%;
    margin: 15px auto 0;
}

/* 人气收藏 */
.card-like-block {
    background-color: #fff;
}
.card-like-box {
    display: flex;
    flex-direction:row;
    justify-content: space-around;
    padding: 10px 10px;
}
.like-icon {
    width: 20px;
    height: 20px;
    display: block;
    margin: 0 auto;
}
.flex-item {
    position: relative;
    width: 50%;
    text-align: center;
}
.flex-item:not(:last-child):after{
    content: '';
    position: absolute;
    width: 1px;
    height: 200%;
    top: 0;
    right: 0;
    border-right: 1px solid #E3E3E3;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scale(.5,.5);
    transform: scale(.5,.5);
    -webkit-box-sizing: border-box;
    box-sizing: border-box
}
/* 更多 */
.info-more-block {
    background-color: #fff;
    padding:15px;
    margin-top: 15px;
    height: 70px;
}
.info-desc {
    margin-left: 5px;
    color: #bdbdbd;
}
.setBtn[type="primary"] {
    background-color: #53b6e0;
    margin-bottom: 15px;
}
