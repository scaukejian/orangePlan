.page {
    padding-top: 15px;
}
/* 操作列表 */
.w-card-info-box {
    background-color: #fff;
    font-size: 18px;
    padding-left: 15px;
    border-top: 1rpx solid #bdbdbd;
    border-bottom: 1rpx solid #bdbdbd;
    margin-bottom: 15px;
}
.w-user-info {
    display: flex;
}
.w-info-input {
    flex: 1;
}
.w-user-info-img {
    width: 50px;
    height: 50px;
    border: 1px solid #bdbdbd;
    border-radius: 6px;
    margin-right: 15px;
    margin-top: 10px;
}
.w-card-info-box .input {
    padding: 10px 0;
    position: relative;
}
.widget__line_top{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    height: 1rpx;
    background-color: #DFDFDF;
    width: 100%;
}
.w-user-com {
    display: flex;
    position: relative;
}
.w-com-txt {
    width: 70px;
    margin-right: 10px;
    display: flex;
    align-items: center;
}
.com-input {
    flex: 1;
}
.com-input textarea {
    width: 90%;
    height: 3em;
}
.creatBtn {
    width: 90%;
    margin: 0 auto;
}
.changeMobile {
    position: absolute;
    right: 20px;
    top: 20px;
    border: 1px solid #bdbdbd;
    border-radius: 6px;
    font-size: 14px;
    padding: 0 5px;
    z-index: 999;
}
.checkCode {
    border: 1px solid #bdbdbd;
    border-radius: 6px;
    font-size: 14px;
    height: 24px;
    line-height: 24px;
    padding: 0 7px;
    margin-right: 10px;
    position: absolute;
    right: 15px;
    top: 50%;
    margin-top: -14px;
    z-index: 999;
}
.creatBtn {
    width: 90%;
    margin: 0 auto;
}
.setBtn[type="primary"] {
    background-color: #53b6e0;
}