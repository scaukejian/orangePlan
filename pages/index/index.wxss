/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.note_content {
  font-size: 16px;
  color: #636363;
  font-family: "Verdana";
  padding: 10px 3px 3px 10px;
  width: 89%;
}

.time {
  width: 100%;
  padding: 0px 0px 10px 10px;
  font-size: 12px;
  color: #999;
  font-weight: normal;
  font-style: italic;
  border-bottom: 1px #e6e6e6 solid;
}

.inline-view {
  display: inline-block;
}

.note-view {
  display: flex;
  flex-wrap: wrap;
}

.finish-view {
  width: 5%;
  display: flex;
  zoom: 80%;
  padding: 18px 0px 0px 3px;
  margin-left: 3px;
  justify-content: center;

}

.note_add_btn {
  position: fixed;
  background-color: #5bccfc;
  bottom: 20rpx;
  right: 75rpx;
  _position: absolute;
  color: #fff;
  border-radius: 95%;
  
}

.add_view {
  position: fixed;
  bottom: 0rpx;
  right: 88rpx;
  _position: absolute;
  color: white;
}
.note_add_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.note_add_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  color: #10aeff;
  /*display: flex;
  flex-direction: column;
  justify-content: center;*/
}

.btn-line {
  width: 1px;
  background-color: #bfefff;
}

.btn-view {
  width: 100%;
  display: flex;
  height: 40px;
  flex-direction: row;
  justify-content: space-around;
}

.line-top {
  width: 100%;
  height: 1px;
  background-color: #bfefff;
}

.btn-cancel,.btn-submit {
  width: 50%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.btn-submit{
  background-color: #10aeff;
  color:white;
}


.dialog-title {
  margin-top: 20px;
  text-align: center;
  margin-bottom: 15px;

}

.input-style {
  height: 100px;
  width:90%;
  margin: 30px auto 0px auto;
  border: 1px #bfefff solid;
  border-radius: 5px;
  padding: 10px;
}
.navigate-input{
  padding: 0px;
  margin: 0px;
}
.navigate-view {
  white-space: nowrap;
  display: flex;
  width: 100%;
  border-top: 1px #E6E6E6 solid;
  border-bottom: 1px #E6E6E6 solid;
}
.navigate-inline {
  display: inline-block;
  color: #53b6e0;
  height: 25px;
  line-height: 25px;
  font-size: 22px;
  padding: 2px;
  text-align: center;
}
.search-icon {
  width:10%;
}
.navigate-picker{
  width:80%;
  text-align: center;
  border-left:1px #E6E6E6 solid;
  border-right:1px #E6E6E6 solid;
  border-radius: 2px;
}
.addBtn{
  width:10%;
  padding: 0px;
}
.addBtnText {
  font-size: 40px;
}
.navigate-input {
  width:80%;
  text-align: left;
  border-right:1px #E6E6E6 solid;
  padding:0px 0px 0px 5px;
  margin: 0px;
  font-size: 18px;

}
.searchBtn {
  width:20%;
  padding: 0px;
}
.searchNoteText{
  height: 25px;
  line-height: 25px;
  font-size: 18px;
 }


